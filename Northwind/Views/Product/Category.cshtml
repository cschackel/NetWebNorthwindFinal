@using Models
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category";
}

    <div class="">
        <h2>Categories:</h2>
        <div class="list-group">
            @foreach (Category c in Model)
            {
                <a asp-action="Index" asp-route-id="@c.CategoryId" class="list-group-item list-group-item-action list_btn">@c.CategoryName: @c.Description</a>
            }
        </div>
    </div>

