@model Northwind.Models.Product

@{
    ViewData["Title"] = "Product Detail";
}

<p class="lead">Product Information</p>

<hr class="my-4">
<div class="row">


    <div class="col-6">
        <h1>@Model.ProductName</h1>
        <hr />
        <h3>Price: $@Model.UnitPrice</h3>
        <hr />
        <h4>Category: @Model.Category.CategoryName</h4>
        <hr />
        <h4>Quantity Per Unit: @Model.QuantityPerUnit</h4>
        <hr />
        <h4>In Stock: @Model.UnitsInStock</h4>
        <hr />
        @if (ViewBag.starRating != -1)
        {
        <h4>Star Score: @for (int i = 0; i < ViewBag.starRating; i++)
        {<i class="fas fa-star rating-star"></i>}</h4><hr/>}
        <h4>Review Score: @ViewBag.rating</h4>
    </div>
</div>
<div class="row mb-5">
    <a asp-action="Test" asp-controller="Product" asp-route-id="@Model.ProductId">
    <div class="btn btn-primary">
        See Reviews
    </div>
        </a>
</div>
<div class="row mb-5">
    <button class="btn btn-success">Add to cart</button>
</div>


<div class="row">
    <a class="font-weight-light" asp-controller="Product" asp-action="Category" asp-route-id="@Model.CategoryId">Return to category page</a>
</div>

@section Scripts {

    <script src="~/js/client.js"></script>
}